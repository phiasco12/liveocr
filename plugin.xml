<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-liveocr"
        version="1.0.0">

  <name>LiveOCR</name>
  <description>Live camera serial/text recognition plugin (lightweight, offline)</description>
  <license>Apache 2.0</license>
  <keywords>cordova, plugin, camera, ocr, serial, text</keywords>

  <!-- JS Bridge -->
  <js-module src="www/LiveOCR.js" name="LiveOCR">
    <clobbers target="LiveOCR" />
  </js-module>

  <!-- Android -->
  <platform name="android">
    <config-file target="AndroidManifest.xml" parent="/manifest">
      <uses-permission android:name="android.permission.CAMERA" />
    </config-file>

    <source-file src="src/android/LiveOCR.java"
                 target-dir="src/com/phiasco/liveocr" />

    <framework src="androidx.camera:camera-core:1.3.0" />
    <framework src="androidx.camera:camera-camera2:1.3.0" />
    <framework src="androidx.camera:camera-lifecycle:1.3.0" />
    <framework src="androidx.camera:camera-view:1.3.0" />
  </platform>

</plugin>
